#!/run/current-system/sw/bin/bash

ssh -N -i ${HOME}/.ssh/id_rsa -L 19101:localhost:9101 mycroft.alunduil.com &
TUNNEL_PID_19101=${!}
ssh -N -i ${HOME}/.ssh/id_rsa -R 19102:localhost:9102 mycroft.alunduil.com &
TUNNEL_PID_19102=${!}

JOB=${1}
CLIENT=${JOB%%-*}

echo "
run job=${JOB}
yes
wait
status client=${CLIENT}
" | sudo bconsole -c /etc/bacula/bconsole.conf

kill ${TUNNEL_PID_19101}
kill ${TUNNEL_PID_19102}
