emulate -L zsh

ssh -N -i ${HOME}/.ssh/id_rsa -L 19101:localhost:9101 mycroft.alunduil.com &
TUNNEL_PID_19101=${!}

ssh -N -i ${HOME}/.ssh/id_rsa -R 19102:localhost:9102 mycroft.alunduil.com &
